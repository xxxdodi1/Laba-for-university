#include <stdio.h>
#include <math.h>
#include <stdlib.h>
const double e = 2.718281828459045;


float factorial(float j){
    float add=1;
    int i;
    for(i=1;i<=j;i++){
        add=add*i;
        return add;
    }
}

int main() {
    float x,eps,n=1,l=0;
    printf ("Input x-");
    scanf  ("%f",&x);
    printf ("Input eps-");
    scanf  ("%f",&eps);
    if (eps<=0||eps>=1){
        printf("Input other eps-");
        scanf ("%f",&eps);
    }else {
        if(fabs(x)<1){
            while(pow(x,n)/factorial (n)>eps){
                l=l+(pow(x,n)*pow(-1,n)/factorial (n));
                n=n+1;
            } 
        }
        else (printf ("Input other x= "));  
        scanf("%f",&x);
    }
    const double e = 2.718281828459045;
    printf ("my e^-x=%f\n",l);
    printf ("normal e^-x=%f",pow(e,-x));
    
    
    return 0;
}
